<resources>
    <!-- Base application theme. -->
    <style name="Theme.AdventOfCode" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorAccent">@color/blue_gray_200</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_200</item>
        <item name="colorPrimaryVariant">@color/orange_700</item>
        <item name="colorOnPrimary">@color/black_main</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black_main</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>