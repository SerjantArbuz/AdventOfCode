<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="sgtmelon.adventofcode">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AdventOfCode"
        tools:targetApi="31">

        <activity
            android:name=".menu.MainMenuActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".menu.SolutionMenuActivity"
            android:parentActivityName=".menu.MainMenuActivity"/>

        <activity android:name=".year15.day1.SantaFloorActivity"
            android:parentActivityName=".menu.SolutionMenuActivity"/>

        <activity android:name=".year21.day10.SubmarineActivity"
            android:parentActivityName=".menu.SolutionMenuActivity"/>

    </application>

</manifest>