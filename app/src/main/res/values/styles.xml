<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleText">
        <item name="android:textColor">@color/black_main</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="SubtitleText">
        <item name="android:textColor">@color/black_second</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <style name="SolutionText" parent="SubtitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/text_margin</item>
        <item name="android:layout_marginEnd">@dimen/text_margin</item>
        <item name="android:text">@string/result_loading</item>
    </style>

</resources>